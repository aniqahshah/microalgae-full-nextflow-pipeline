// ====================
//      PARAMETERS
// ====================
params {
  input_fastq     = null
  threads         = 16
  run_qc          = true
  run_assembly    = true
  run_eval        = true
  run_annotation     = true
  clade              = null
  genome             = null
  augustus_config    = 'augustus_config'
  swissprot_db       = 'swissprot_db'
  eggnog_data_dir = './eggnog_mapper_data'
}

// ====================
//   PROCESS SETTINGS
// ====================
process {
  executor = 'local'
  container = ''
  scratch = false
  errorStrategy = 'retry'
  maxRetries = 2

  withName:RawQC {
    container = 'quay.io/biocontainers/nanoplot:1.41.0--pyhdfd78af_0'
  }
  withName:FilterReads {
    container = 'quay.io/biocontainers/nanofilt:1.1.3--py35_0'
  }
  withName:FilteredQC {
    container = 'quay.io/biocontainers/nanoplot:1.41.0--pyhdfd78af_0'
  }
  withName:JellyfishCount {
    container = 'community.wave.seqera.io/library/jellyfish:2.2.10--8e591e8a1910388f'
  }
  withName:GenomeScope {
    container = 'community.wave.seqera.io/library/genomescope2:2.0.1--9f144513ca76a466'
  }
  withName:SmartDenovo {
    container = 'community.wave.seqera.io/library/smartdenovo:1.0.0--81c399f7cd4dea3c'
  }
  withName:MedakaPolish {
    container = 'quay.io/biocontainers/medaka:2.1.0--py38ha0c3a46_0'
  }
  withName:Quast {
    container = 'community.wave.seqera.io/library/quast:5.3.0--755a216045b6dbdd'
  }
  withName:Busco {
    container = 'community.wave.seqera.io/library/busco:6.0.0--a9a1426105f81165'
  }
  withName:MultiQC {
    container = 'community.wave.seqera.io/library/multiqc:1.30--07305e381841aa3b'
  }
  withName:QuastPolished {
    container = 'community.wave.seqera.io/library/quast:5.3.0--755a216045b6dbdd'
  }
  withName:BuscoPolished {
    container = 'community.wave.seqera.io/library/busco:6.0.0--a9a1426105f81165'
  }
  withName:BrakerEP {
    container = 'teambraker/braker3:latest'
    cpus = 16
    memory = '32 GB'
    time = '12h'
  }
  withName:BuscoAnnotation {
    container = 'community.wave.seqera.io/library/busco:6.0.0--a9a1426105f81165'
  }
  withName:AnnotationStatistics {
    container = 'community.wave.seqera.io/library/agat:1.5.1--ae3cd948ce5e9795'
  }
  withName:BlastpSwissprot {
    container = 'ncbi/blast:latest'
  }
  withName:Interproscan {
    container = 'community.wave.seqera.io/library/interproscan:5.59_91.0--6053fb17325942d2'
  }
  withName:EggnogMapper {
    container = 'quay.io/biocontainers/eggnog-mapper:2.1.13--pyhdfd78af_0'
    containerOptions = "-v ${baseDir}/eggnog_mapper_data:/eggnog_data"
  }
  withName:EggnogSummary {
    container = 'python:3.10-slim'
  }
  withName:AnnotationMerge {
    container = 'python:3.10-slim'
  }
}

// ====================
//    GLOBAL SETTINGS
// ====================
docker.enabled = true
